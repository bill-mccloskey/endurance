{
  "description": "Long-running test of Firefox",
  "manifest_version": 2,
  "name": "Ensurance test",
  "version": "1.0",

  "permissions": [
    "tabs",
    "<all_urls>"
  ],

  "browser_action": {
    "browser_style": true,
    "default_title": "Act!"
  },

  "background": {
    "scripts": ["lib.js", "background.js"]
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["lib.js", "collect-links.js"]
  }]
}
